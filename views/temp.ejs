<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ejs template</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container" style="margin-top: 70px;">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Name</th>
              <th scope="col">Place</th>
              <th scope="col">Mobile.No</th>
              <th scope="col">Delete</th>
              <th scope="col">Edit</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach(function(item){ %> <% if (item.active == true) { %>
            <tr class="table-info" >
              <td class="table-success"><%= item._id %></td>
              <td class="table-success"><%= item.name %></td>
              <td class="table-success"><%= item.place %></td>
              <td class="table-success"><%= item.mobile %></td>
              <td><button class="btn btn-primary">Delete</button></td> 
              <td><button class="btn btn-primary">Edit</button></td> 
            </tr>
            <% } else { %>
            <tr class="table-danger" >
              <td class="table-danger"><%= item._id %></td>
              <td class="table-danger"><%= item.name %></td>
              <td class="table-danger"><%= item.place %></td>
              <td class="table-danger"><%= item.mobile %></td>
              <td><button class="btn btn-primary">Delete</button></td> 
              <td><button class="btn btn-primary">Edit</button></td> 
            </tr>
            
            <% } %><% }) %>
            
          </tbody>
        </table>
      </div>
</body>
</html>